{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PL-300 Quiz Question Bank",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "type",
      "prompt"
    ],
    "properties": {
      "id": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": [
          "single",
          "multi",
          "match",
          "order",
          "matrix",
          "case"
        ]
      },
      "prompt": {
        "type": "string"
      },
      "exhibits": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "content": {
              "type": "string"
            }
          }
        }
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "difficulty": {
        "type": "string",
        "enum": [
          "easy",
          "medium",
          "hard"
        ]
      },
      "scoring": {
        "type": "object",
        "properties": {
          "mode": {
            "type": "string",
            "enum": [
              "all_or_nothing",
              "partial"
            ]
          },
          "points": {
            "type": "number"
          }
        }
      },
      "choices": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "text": {
              "type": "string"
            },
            "isCorrect": {
              "type": "boolean"
            }
          }
        }
      },
      "answer": {
        "type": "string"
      },
      "pairs": {
        "type": "object",
        "additionalProperties": {
          "type": "string"
        }
      },
      "order": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "matrix": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                }
              }
            }
          },
          "cols": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                }
              }
            }
          },
          "correct": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      },
      "parts": {
        "type": "array",
        "items": {
          "type": "object"
        }
      },
      "explanation": {
        "type": "string"
      }
    }
  }
}